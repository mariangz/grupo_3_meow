<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head', {pageTitle: 'Meow!'}); %>
        <link rel="stylesheet" href="/css/productDetail.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="small-container single-product">
                <div class="row">
                    <div class="col-2">
                        <img src="/images/food/<%= producto.image %>" width="100%">
                    </div>
                    <div class="col-2">
                        <h1>
                            <%= producto.name %>
                        </h1>
                        <p>Meow - El mejor alimento</p>
                        <h4>
                            $
                            <%= producto.price %>
                        </h4>

                        <select>
                                    <% if (producto.category) { %>
                                        <% for (let x = 0; x < producto.category.length; x++)  {%>
                                <option>
                                    <%= producto.category[x] %>
                                </option>
                                <% } %>
                                    <% } %>
                        </select>


                        <input type="number" name="quantity" value="1">

                        <a href="" class="btn-detail">AÃ±adir al carrito</a>
                        <h3>Info Nutricional</h3>
                        <br>
                        <p>
                            <%= producto.nutritional1  %>
                        </p>
                        <p>
                            <%= producto.nutritional2  %>
                        </p>
                        <p>
                            <%= producto.nutritional3  %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="horizontalBlock horizontalBlock--yellow"></div>
        </main>
        <%- include('../partials/footer'); %>
</body>