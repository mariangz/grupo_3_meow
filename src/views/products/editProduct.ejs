<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head', {pageTitle: 'Editar producto!'}); %>
        <link rel="stylesheet" href="/css/adminProduct.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="crear-producto">
                <div class="form-content">
                    <h3>Editar Producto</h3>
                    <form action="/productos/editar-productos/<%=product.id %>?_method=PUT" method="POST">
                        <div class="contenedor">
                            <label for="id">
                            <span>ID del producto: </span>
                        <input type="text" name="id" id="id" autofocus value=<%= product.id %>></label>
                        </div>
                        <div class="contenedor">
                            <label for="name">
                            <span>Nombre del producto: </span>
                        <input type="text" name="name" id="name" autofocus value=<%= product.name %>></label>
                        </div>
                        <div class="contenedor">
                            <label for="price">
                            <span>Precio:</span>
                        <input type="number" name="price" id="price" value=<%= product.price %>></label>
                        </div>
                        <div class="contenedor">
                            <label for="description">
                            <span>Descripción resumida:</span>
                        <textarea name="description" id="description"><%= product.description %></textarea></label>
                            <label for="nutritional">
                            <span>Información nutricional:</span>
                        <textarea name="nutritional" id="nutritional"><%= product.nutritional %></textarea></label>
                        </div>
                        <div class="contenedor">
                            <span>Edad de tu mascota:</span><br>
                            <% ages.forEach(function(age){%>
                                <input type="checkbox" name="category" value=<%=age %>
                                <% product.category.forEach(function(p_age) { %>
                                    <%= (p_age == age) ? 'checked' : '' %>
                                        <% }) %>
                                            >
                                            <label for="<%=age%>"><%=age%></label>
                                            <% }) %>
                        </div>

                        <div class="button-product">
                            <button type="submit">Guardar cambios</button>
                        </div>
                    </form>
                    <form action="/productos/<%= product.id %>?_method=DELETE" method="POST">
                        <div class="button-product">
                            <button type="submit" class="action-button" id= "delete">ELIMINAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include('../partials/footer'); %>
</body>