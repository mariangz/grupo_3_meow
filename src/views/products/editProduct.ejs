<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head', {pageTitle: 'Editar producto!'}); %>
        <link rel="stylesheet" href="/css/adminProduct.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="crear-producto">
                <div class="form-content">
                    <h3>Editar Producto</h3>
                    <form action="/productos/editar-productos/<%=producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="contenedor">
                            <label for="id">
                            <span>ID del producto: </span>
                        <input type="text" name="id" id="id" autofocus value=<%= producto.id %>></label>
                        </div>
                        <div class="contenedor">
                            <label for="name">
                            <span>Nombre del producto: </span>
                        <input type="text" name="name" id="name" autofocus value=<%= producto.name %>></label>
                        </div>
                        <div class="contenedor">
                            <label for="price">
                            <span>Precio:</span>
                        <input type="number" name="price" id="price" value=<%= producto.price %>></label>
                        </div>
                        <div class="contenedor">
                            <label for="description">
                            <span>Descripción resumida:</span>
                        <textarea name="description" id="description"><%= producto.description %></textarea></label>
                            <label for="nutritional">
                            <span>Información nutricional:</span>
                        <textarea name="nutritional" id="nutritional"><%= producto.nutritional %></textarea></label>
                        </div>
                        <div class="contenedor">
                            <span>Edad de tu mascota:</span><br>
                            <% edades.forEach(function(edad){%>
                                <input type="checkbox" name="<%= edad %>" value=<%=edad %>
                                <% producto.category.forEach(function(p_edad) { %>
                                    <%= (p_edad == edad) ? 'checked' : '' %>
                                        <% }) %>
                                            >
                                            <label for="<%=edad%>"><%=edad%></label>
                                            <% }) %>
                        </div>

                        <div class="button-product">
                            <button type="submit">Guardar</button>
                        </div>
                    </form>
                    <form action="/productos/<%= producto.id %>?_method=DELETE" method="POST">
                        <div class="button-product">
                            <button type="submit" class="action-button delete">ELIMINAR</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="horizontalBlock horizontalBlock--yellow"></div>
        </main>
        <%- include('../partials/footer'); %>
</body>