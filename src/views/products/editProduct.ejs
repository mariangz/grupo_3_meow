<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head', {pageTitle: 'Editar producto'}); %>
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="container crear-producto">
                <div class="form-container">
                    <h1>Editar Producto</h1>
                    <form action="/products/editProduct/<%=product.product_id %>?_method=PUT" method="POST">
                        <!--
                        <div class="field">
                            <label for="id">
                                <span>ID del producto</span>
                                <input type="text" name="id" id="id" autofocus value=<%= product.product_id %>>
                            </label>
                        </div>
                        -->
                        <div class="field">
                            <label for="name">
                                <span>Nombre del producto</span>
                                <input type="text" name="name" id="name" autofocus value=<%= product.productName %>>
                            </label>
                        </div>
                        <div class="field">
                            <label for="price">
                            <span>Precio</span>
                        <input type="number" name="price" id="price" value=<%= product.productPrice %>></label>
                        </div>
                        <div class="field">
                            <label for="description">
                            <span>Descripción resumida</span>
                        <textarea name="description" id="description"><%= product.shortDescription %></textarea></label>
                            <label for="nutritional">
                            <span>Información nutricional</span>
                        <textarea name="nutritional" id="nutritional"><%= product.nutritionalDetail %></textarea></label>
                        </div>

                        <fieldset class="field">
                            <legend>Categoria del producto</legend>
                            <select name="category" required>
                                <option disabled value="#">Seleccione una categoria</option>
                                <option value="cachorro" <%=product.productCategory=="cachorro" ? "selected" : null %>
                                    >Cachorro</option>
                                <option value="adulto" <%=product.productCategory=="adulto" ? "selected" : null %>>Adulto</option>
                                <option value="senior" <%=product.productCategory=="senior" ? "selected" : null %>>Senior</option>
                                </select>
                        </fieldset>

                        <div class="button-product">
                            <button type="submit" class="button">Guardar cambios</button>
                        </div>
                    </form>
                    <hr class="form-separator" />
                    <form action="/products/<%= product.product_id %>?_method=DELETE" method="POST">
                        <div class="button-product">
                            <button type="submit" class="delete-button">Eliminar este producto</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include('../partials/footer'); %>
</body>