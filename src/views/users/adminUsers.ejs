<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head', {pageTitle: 'Administrar'}); %>
        <link rel="stylesheet" href="/css/homeProductos.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <div class="container crear-producto">
                <section id="productos">
                    <h2>Administrador de usuarios</h2>

                    <div class="productos-admins">
                        <div class="product-item">
                            <img src="/images/users/default.png" class="product-item__image">
                            <div class="product-item__text-container">
                                <h3 class="product-item__text title">Buscar un usuario</h3>
                                <form action="/users/adminUsers/search" method="GET">
                                    <input type="search" name="search">
                                    <button type="submit" class="button button--small button--outline">
                                    <i class="fas fa-search"></i> Buscar</button>
                                </form>
                            </div>
                        </div>
                        <div class="product-item product-item--new">
                            <img src="/images/users/default.png" class="product-item__image">
                            <div class="product-item__text-container">
                                <h3 class="product-item__text title">Nuevo Usuario</h3>
                                <a href="createUser" class="button button--small button--outline">
                                    <i class="fas fa-plus"></i> Crear
                                </a>
                            </div>
                        </div>
                        <% users.forEach(user => { %>
                            <div class="product-item">
                                <a href="/users/<%= user.user_id %>" class="link-product"><img src="/images/users/<%= user.image %>" class="product-item__image"></a>
                                <div class="product-item__text-container">
                                    <h3 class="product-item__text title">
                                        <%= user.name %>
                                    </h3>
                                    <a href="editUser/<%= user.user_id %>" class="button button--small button--outline">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </section>
            </div>

        </main>
        <%- include('../partials/footer'); %>
</body>